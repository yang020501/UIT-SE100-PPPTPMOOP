<Window x:Class="Material_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <WrapPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Test Button" Margin="5"
                    MinWidth="150"/>
            <Button Content="Button" Margin="5"
                    MinHeight="50"
                    MinWidth="50"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"/>

            <ToggleButton x:Name="ToggleButton"  Margin="5"/>
            <ToggleButton Margin="5"
                IsChecked="True"
                Style="{StaticResource MaterialDesignActionToggleButton}"/>
            <TextBox MinWidth="150" 
                     Margin="5"
                     wpf:TextField.Hint="Name"
                     Style="{StaticResource MaterialDesignTextBox}"></TextBox>
            <wpf:TimePicker Margin="5"
                            MinWidth="150" 
                            VerticalAlignment="Top"  
                            Width="90" />
        </WrapPanel>
    </Grid>
</Window>
