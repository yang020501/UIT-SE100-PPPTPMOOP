<Window x:Class="household_management.View.Household"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:household_management.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Household" Height="641.2" Width="564" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowDrop="True" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="0.07*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF4D60C0"  >
            <Image Height="30"   Width="37" Source="/household_management;component/Resources/household.jpg" Margin="10,6,517,5.6"/>

            <Button x:Name="btnExit" Content="Exit" Height="32" Cursor="Hand" Click="btnExit_Click" RenderTransformOrigin="17.79,0.656" Margin="529,0,0,5.6" HorizontalAlignment="Left" Width="30" VerticalAlignment="Bottom">
                <Button.Background>
                    <ImageBrush ImageSource="/household_management;component/Resources/exite.jpg"/>
                </Button.Background>
            </Button>
            <Label Content="HouseHold Registration" HorizontalAlignment="Right" Width="172" FontWeight="Bold" FontSize="14" Foreground="#DDE1E6F3" Margin="0,6,340,5.6"/>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height ="0.3*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="0.1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#FFF32F2F">
                <Image HorizontalAlignment="Right" Height="108" Margin="0,14,454,0" VerticalAlignment="Top" Width="110" Source="/household_management;component/Resources/QuocHuy.png"/>
                <Label Content="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM" Margin="126,14,0,0" VerticalAlignment="Top" Height="38" HorizontalAlignment="Left" Width="410" FontSize="20" FontWeight="Bold"/>
                <Label Content="Độc lập - Tự do - Hạnh phúc" HorizontalAlignment="Left" Margin="218,41,0,0" VerticalAlignment="Top" Width="218" FontSize="16"/>
                <Label Content="Sổ Hộ Khẩu" HorizontalAlignment="Left" Margin="174,76,0,0" VerticalAlignment="Top" Height="52" Width="279" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="36" Padding="50,4,4,4"/>

            </Grid>
            <Grid Grid.Row="1">
                <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="96,44,0,0"  VerticalAlignment="Top" Width="415" materialDesign:HintAssist.Hint="Full Name" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <materialDesign:PackIcon Kind="Account" Margin="42,47,0,0" Height="31" Width="32" />
                <materialDesign:PackIcon Kind="CardAccountDetails" Margin="42,107,0,0" Height="31" Width="32" RenderTransformOrigin="0.438,1.342" />
                <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="96,104,0,0"  VerticalAlignment="Top" Width="220" materialDesign:HintAssist.Hint="Id" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"  materialDesign:HintAssist.HelperText="12 digits numbers" />
                <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="96,184,0,0"  VerticalAlignment="Top" Width="415" materialDesign:HintAssist.Hint="Address" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <materialDesign:PackIcon Kind="MapMarker" Margin="42,187,0,0" Height="31" Width="32" />
                <materialDesign:PackIcon Kind="Map" Margin="42,253,0,0" Height="31" Width="32" />
                <ComboBox
                        materialDesign:HintAssist.Hint="Area" Margin="96,253,308,178.6">
                    <ComboBoxItem
                        Content="1" />
                    <ComboBoxItem
                         Content="2" />
                    <ComboBoxItem
                           Content="3" />
                    <ComboBoxItem
                         Content="4" />
                </ComboBox>
                <materialDesign:PackIcon Kind="AccountPlus" Margin="42,319,0,0" Height="31" Width="32" />
                <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="96,316,0,0"  VerticalAlignment="Top" Width="220" materialDesign:HintAssist.Hint="IdFMember" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"  materialDesign:HintAssist.HelperText="12 digits numbers" />
            </Grid>
            <Grid Grid.Row="2">
                <Button Content="Add"  Height="34" Background="#FF4D60C0" Margin="235,5,234,0" VerticalAlignment="Top"/>

            </Grid>

        </Grid>
    </Grid>
</Window>
