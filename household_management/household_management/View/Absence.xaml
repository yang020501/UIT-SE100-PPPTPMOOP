<Window x:Class="household_management.View.Absence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:household_management.View"
        mc:Ignorable="d"
        Title="Absence" Height="723.6" Width="577.6" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF4D60C0"  >
            <Image Height="30"  Width="37" Source="/household_management;component/Resources/absence.jpg" Margin="10,7,530.6,7.8"/>


            <Button x:Name="btnExit"  Height="Auto"  Cursor="Hand" Margin="540,6,4.6,7.2" RenderTransformOrigin="0.503,0.5" Click="btnExit_Click"  >
                <Button.Background>
                    <ImageBrush ImageSource="/household_management;component/Resources/exite.jpg"/>
                </Button.Background>
            </Button>
            <Label Content="Temporary Absence Certificate" FontWeight="Bold" FontSize="14" Foreground="#DDE1E6F3" Margin="52,7,292.6,7.8"/>

        </Grid>
        <Grid Grid.Row="1" Background="#FF9FF1F9">

            <Border BorderBrush="Black" BorderThickness="2" Margin="26,26,26,43">
                <Grid >
                    <Label Content="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM" Margin="52,0,60.4,556" VerticalAlignment="Bottom" Height="38" FontSize="20" FontWeight="Bold"/>
                    <Label Content="Độc lập - Tự do - Hạnh phúc" Margin="148,0,156.4,537" VerticalAlignment="Bottom" FontSize="16"/>
                    <Label Content="Temporary Absence Certificate" Margin="77,72,86.4,480" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="24" Padding="4" Foreground="#DDED1D1D"/>
                    <TextBox Height="34" Margin="77,150,43.4,0"  VerticalAlignment="Top" materialDesign:HintAssist.Hint="Full Name" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="Account" Margin="24,153,0,0" Height="31" Width="32" />
                    <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="77,206,0,0"  VerticalAlignment="Top" Width="208" materialDesign:HintAssist.Hint="Id" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"  materialDesign:HintAssist.HelperText="12 digits numbers" />
                    <Label Content="Household Owner Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,274,0,0" Height="31" Width="232" FontSize="16" Padding="0,4,4,4"/>
                    <materialDesign:PackIcon Kind="CardAccountDetails" Margin="24,209,0,0" Height="31" Width="32" />
                    <Label Content="Household Id" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,358,0,0" Height="31" Width="232" FontSize="16" Padding="0,4,4,4"/>
                    <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="77,389,0,0"  VerticalAlignment="Top" Width="208" materialDesign:HintAssist.Hint="HouseholdId" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="HouseMapMarker" Margin="24,274,0,0" Height="31" Width="32" RenderTransformOrigin="0.763,-0.752" />
                    <TextBox Height="34" Margin="77,305,43.4,0"  VerticalAlignment="Top" materialDesign:HintAssist.Hint="Full Name Household Owner" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="77,447,0,0"  VerticalAlignment="Top" Width="391" materialDesign:HintAssist.Hint="Address" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="MapMarker" Margin="24,450,0,0" Height="31" Width="32" />
                    <materialDesign:PackIcon Kind="CalendarRange" Margin="24,501,0,0" Height="31" Width="32" RenderTransformOrigin="0.444,1.213" />
                    <Label Content="From" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,501,0,0" Height="31" Width="49" FontSize="16"/>
                    <Label Content="(Today)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="131,501,0,0" Height="31" Width="107" FontSize="16" FontWeight="Bold" FontStyle="Italic"/>
                    <Label Content="To" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,501,0,0" Height="31" Width="49" FontSize="16"/>
                    <DatePicker
                    materialDesign:HintAssist.Hint="Day back"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="329,481,21.4,69" Height="54" FontSize="16" FontWeight="Bold" FontStyle="Italic" Padding="0" />
                </Grid>
            </Border>
            <Button Content="Add"  Height="34" Background="#FF4D60C0" Margin="241,638,241.6,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
