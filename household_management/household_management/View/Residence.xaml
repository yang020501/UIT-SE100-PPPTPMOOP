<Window x:Class="household_management.View.Residence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:household_management.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Residence" Height="803.6" Width="582.4" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF4D60C0"  >
            <Image Source="/household_management;component/Resources/tempresidence.jpg" Margin="10,6,538.4,7.6" Stretch="Fill"/>


            <Button x:Name="btnExit"  Height="Auto"  Cursor="Hand" Margin="548,6,5.4,7.4" RenderTransformOrigin="0.503,0.5" Click="btnExit_Click"  >
                <Button.Background>
                    <ImageBrush ImageSource="/household_management;component/Resources/exite.jpg"/>
                </Button.Background>
            </Button>
            <Label Content="Temporary Residence Certificate" FontWeight="Bold" FontSize="14" Foreground="#DDE1E6F3" Margin="49,9,295.4,7.4" Padding="4,0,4,4"/>

        </Grid>
        <Grid Grid.Row="1" Background="#FF9FF1F9">

            <Border BorderBrush="Black" BorderThickness="2" Margin="26,26,26,43">
                <Grid >
                    <Label Content="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM" Margin="56,0,56,640.6" FontSize="20" FontWeight="Bold"/>
                    <Label Content="Độc lập - Tự do - Hạnh phúc" Margin="155,22,150.2,631.6" FontSize="16"/>
                    <Label Content="Temopary Residence Certificate" Margin="72,50,72,597.6" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="24" Padding="8,4,4,4" Foreground="#DDED1D1D"/>
                    <TextBox Height="34" Margin="82,125,38.2,0"  VerticalAlignment="Top" materialDesign:HintAssist.Hint="Full Name" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="Account" Margin="29,128,0,0" Height="31" Width="32" />
                    <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="82,180,0,0"  VerticalAlignment="Top" Width="208" materialDesign:HintAssist.Hint="Id" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"  materialDesign:HintAssist.HelperText="12 digits numbers" />
                    <materialDesign:PackIcon Kind="CardAccountDetails" Margin="29,183,0,0" Height="31" Width="32" />
                    <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="82,364,0,0"  VerticalAlignment="Top" Width="208" materialDesign:HintAssist.Hint="HouseholdId" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="HomeAccount" Margin="29,248,0,0" Height="31" Width="32" />
                    <TextBox Height="34" Margin="82,278,38.2,0"  VerticalAlignment="Top" materialDesign:HintAssist.Hint="Full Name Household Owner" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox
                    HorizontalAlignment="Left" Height="34" Margin="82,444,0,0"  VerticalAlignment="Top" Width="391" materialDesign:HintAssist.Hint="Address" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="HomeMapMarker" Margin="29,410,0,0" Height="31" Width="32" />
                    <materialDesign:PackIcon Kind="CalendarRange" Margin="29,596,0,0" Height="31" Width="32" RenderTransformOrigin="0.444,1.213" />
                    <Label Content="From" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="82,595,0,0" Height="31" Width="49" FontSize="16"/>
                    <Label Content="(Today)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="147,596,0,0" Height="31" Width="107" FontSize="16" FontWeight="Bold" FontStyle="Italic"/>
                    <Label Content="To" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="276,596,0,0" Height="31" Width="38" FontSize="16"/>
                    <DatePicker
                    materialDesign:HintAssist.Hint="Day leave"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="330,578,38.2,59.6" Height="48" FontSize="16" FontWeight="Bold" FontStyle="Italic" Padding="0" />
                    <Label Content="Household Owner Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="82,248,0,0" Height="31" Width="232" FontSize="16" Padding="0,4,4,4"/>
                    <Label Content="Household Id" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="82,328,0,0" Height="31" Width="232" FontSize="16" Padding="0,4,4,4"/>
                    <Label Content="Household Address" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="82,410,0,0" Height="31" Width="232" FontSize="16" Padding="0,4,4,4"/>
                    <Label Content="Temporary Residence Address" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="82,492,0,0" Height="31" Width="248" FontSize="16" Padding="0,4,4,4" FontStyle="Italic"/>
                    <TextBox
                        HorizontalAlignment="Left" Height="34" Margin="82,523,0,0"  VerticalAlignment="Top" Width="391" materialDesign:HintAssist.Hint="Address" TextWrapping="Wrap" FontSize="16" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="HomeExportOutline" Margin="29,492,0,0" Height="31" Width="32" />
                </Grid>
            </Border>
            <Button Content="Add"  Height="34" Background="#FF4D60C0" Margin="240,720,242.4,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
