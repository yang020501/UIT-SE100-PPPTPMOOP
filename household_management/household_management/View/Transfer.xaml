<Window x:Class="household_management.View.Transfer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:household_management.View"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        DataContext="{StaticResource TransferVM}"
        Title="Transfer" Height="465.274" Width="745.404" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}">
    <Border Background="White" CornerRadius="5.3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.07*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#FF4D60C0" CornerRadius="4,4,0,0">
        <Grid >
            <Image Source="/household_management;component/Resources/transfer.jpg" Margin="5,3,713.6,3.4" Stretch="Fill"/>

            <Button x:Name="btnExit" Content="Exit" Height="26" Cursor="Hand" Click="btnExit_Click" RenderTransformOrigin="17.79,0.656" Margin="711,0,0,3.4" HorizontalAlignment="Left" Width="29" VerticalAlignment="Bottom">
                <Button.Background>
                    <ImageBrush ImageSource="/household_management;component/Resources/exite.jpg"/>
                </Button.Background>
            </Button>
            <Label Content="Household Transfer" HorizontalAlignment="Right" Width="172" FontWeight="Bold" FontSize="14" Foreground="#DDE1E6F3" Margin="0,0,541.6,6.4"/>
        </Grid>
            </Border>
            <Grid Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="1" Margin="32,32,32,40">
                <Grid Height="361" Margin="0.2,0,-0.2,0.4" VerticalAlignment="Bottom">
                    <Label Content="CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM" Margin="132,4,133,312" FontSize="20" FontWeight="Bold"/>
                    <Label Content="Độc lập - Tự do - Hạnh phúc" Margin="229,28,229,302" FontSize="16"/>
                    <Label Content="Household Transfer Form" Margin="188,49,192,274" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="24" Padding="8,4,4,4" Foreground="#DDED1D1D"/>
                    <materialDesign:PackIcon Kind="HomeAccount" Margin="48,108,0,0" Height="31" Width="32" RenderTransformOrigin="0.597,-2.323" />
                    <TextBox Height="34" Margin="97,105,108,0"  VerticalAlignment="Top" 
                             materialDesign:HintAssist.Hint="Full Name Of User" TextWrapping="Wrap" 
                             FontSize="16" Text="{Binding Name_User, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox
                        HorizontalAlignment="Left" Height="34" Margin="97,149,0,0"  
                        VerticalAlignment="Top" Width="208" materialDesign:HintAssist.Hint="Id"
                        TextWrapping="Wrap" FontSize="16" Text="{Binding Id_User, UpdateSourceTrigger=PropertyChanged}"  
                        materialDesign:HintAssist.HelperText="12 digits numbers" />
                    <materialDesign:PackIcon Kind="CardAccountDetails" Margin="48,152,0,0" Height="31" Width="32" />
                    <materialDesign:PackIcon Kind="HomeMapMarker" Margin="48,254,0,0" Height="31" Width="32" />
                    <TextBox
                        HorizontalAlignment="Left" Height="34" Margin="97,251,0,0" IsReadOnly="True"
                        VerticalAlignment="Top" Width="391" materialDesign:HintAssist.Hint="HouseHold Adress" 
                        TextWrapping="Wrap" FontSize="16" Text="{Binding Old_Address, UpdateSourceTrigger=PropertyChanged}"/>
                    <materialDesign:PackIcon Kind="HomeEdit" Margin="48,303,0,0" Height="31" Width="32" />
                    <TextBox
                     HorizontalAlignment="Left" Height="34" Margin="215,203,0,0"  
                        VerticalAlignment="Top" Width="236" materialDesign:HintAssist.Hint="Household Id" 
                        TextWrapping="Wrap" FontSize="16" Text="{Binding Id_Household, UpdateSourceTrigger=PropertyChanged}"
                        Name="HouseholdIdBox">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding HouseholdIdChangeCommand}" 
                                                   CommandParameter="{Binding ElementName=HouseholdIdBox}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <Label Content="Household Id:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="97,207,0,0" Height="30" Width="126" FontSize="16" Padding="0,6.5,0,0"/>
                    <TextBox
                        HorizontalAlignment="Left" Height="34" Margin="97,300,0,0"  
                        VerticalAlignment="Top" Width="391" materialDesign:HintAssist.Hint="HouseHold New Adress" 
                        TextWrapping="Wrap" FontSize="16" Text="{Binding New_Address, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Check" HorizontalAlignment="Left" Background="#FF4D60C0" 
                            Margin="471,203,0,0" VerticalAlignment="Top" Width="100"
                            Command="{Binding CheckIdHouseholdCommand}" CommandParameter="{Binding ElementName=HouseholdIdBox}"/>
                </Grid>
            </Border>
            <Button Content="Add"  Height="34" Background="#FF4D60C0" 
                    Margin="325,398,325,0" VerticalAlignment="Top" Name="AddButton"
                    Command="{Binding AddCommand}" CommandParameter="{Binding ElementName=AddButton}"/>
        </Grid>

    </Grid>
    </Border>
</Window>
